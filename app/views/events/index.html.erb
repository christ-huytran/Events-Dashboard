<div class='row'>
	<div class='col-md-8 col-md-offset-2'>
		<h4>Here are some of the events in your state:</h4>
		<table class="table table-striped">
			<tr>
				<th>Name</th>
				<th>Date</th>
				<th>Location</th>
				<th>Host</th>
				<th>Action/Status</th>
			</tr>
			<% @events.each do |e| %>
				<% if same_state?(e.state) %>
					<%= render :partial => 'events_list', :locals => {:e => e } %>
				<% end %>
			<% end %>
		</table>
	</div>
</div>

